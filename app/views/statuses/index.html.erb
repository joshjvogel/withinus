<h1 class="page-header">All of the Statuses</h1>

<%= link_to "Post New Status", new_status_path, class: "btn btn-default" %>
<% @statuses.each do |status| %>
  <div class="status">
    <strong><%= status.name %></strong>
    <p><%= status.content %></p>
  
    <div class="meta">
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
      <span class="admin btn-group btn-group-xs" role="group">
        <%= link_to "Edit", edit_status_path(status), id: "edit", class: "btn btn-default" %>
        <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"}, class: "btn btn-default" %>
      </span>
    </div>
  </div>
<% end %>